<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.szopen.loancompanyapp.MainActivity"
    android:background="@drawable/cash">

    <Button
        android:id="@+id/go_calc_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="changeActivityToCalc"
        android:text="@string/go_calc_button" />

    <Button
        android:id="@+id/go_about_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/go_location_btn"
        android:layout_below="@+id/go_calc_btn"
        android:onClick="changeActivityToAboutUs"
        android:text="Our office" />

    <Button
        android:id="@+id/go_location_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/go_about_btn"
        android:layout_centerHorizontal="true"
        android:onClick="changeActivityToLocation"
        android:text="show map" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Loan company"
        android:textSize="30dp" />

</RelativeLayout>
