<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.szopen.loancompanyapp.AboutActivity"
    android:background="@drawable/office">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/opaque"
        android:layout_margin="50dp">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Loan Company office"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="Lodz"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="SomeStreet 16"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="123-55 Poland"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="NIP"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_margin="10dp" />
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_weight="1"
            android:text="9541072487"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/def_margin_calc"
            android:onClick="back"
            android:text="BACK" />


    </RelativeLayout>

</LinearLayout>
